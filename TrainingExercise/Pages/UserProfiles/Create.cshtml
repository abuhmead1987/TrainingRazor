@page
@model TrainingExercise.Pages.UserProfiles.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Profile</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Profile.UserId" class="control-label"></label>
                <select asp-for="Profile.UserId" class ="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Profile.Name" class="control-label"></label>
                <input asp-for="Profile.Name" class="form-control" />
                <span asp-validation-for="Profile.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Profile.Address" class="control-label"></label>
                <input asp-for="Profile.Address" class="form-control" />
                <span asp-validation-for="Profile.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Profile.DateOfBirth" class="control-label"></label>
                <input asp-for="Profile.DateOfBirth" class="form-control" />
                <span asp-validation-for="Profile.DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Profile.CountryId" class="control-label"></label>
                <select asp-for="Profile.CountryId" class ="form-control" asp-items="ViewBag.CountryId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
